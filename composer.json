{
  "name": "hmuwonge/athena",
  "description": "A micro php framework",
  "minimum-stability": "dev",
  "prefer-stable":true,
  "license": "MIT",
  "authors": [
    {
      "name": "hmuwonge",
      "email": "hassansaava@gmail.com"
    }
  ],
  "scripts": {
    "serve": "php -S 127.0.0.1:8000 -t public"
  },
  "require": {
    "filp/whoops": "^2.14",
    "vlucas/phpdotenv": "^5.4",
    "ext-pdo": "*",
    "symfony/console": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app",
      "Framework\\": "framework"
    },
    "files":[
      "framework/helpers.php"
    ]
  },
  "config": {
    "platoform":{
      "php":"7.1"
    },
    "process-timeout": 0
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.8"
  }
}
